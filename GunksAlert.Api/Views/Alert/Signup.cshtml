@using GunksAlert.Api.ViewModels

@model AlertSignupViewModel

<h2>When would you like to receive alerts?</h2>

<form asp.action="AlertSignup" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="Crag">Crag</label>
        <select class="form-select" name="crag" id="crag" aria-label="Disabled crag select" disabled>
            <option selected>Gunks</option>
        </select>
    </div>
    <hr />

    <h3>Weekdays</h3>
    <div class="form-group">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Sunday" value="true">
            <label class="form-check-label" for="Sunday">Sunday</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Monday" value="true">
            <label class="form-check-label" for="Monday">Monday</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Tuesday" value="true">
            <label class="form-check-label" for="Tuesday">Tuesday</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Wednesday" value="true">
            <label class="form-check-label" for="Wednesday">Wednesday</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Thursday" value="true">
            <label class="form-check-label" for="Thursday">Thursday</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Friday" value="true">
            <label class="form-check-label" for="Friday">Friday</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Saturday" value="true">
            <label class="form-check-label" for="Saturday">Saturday</label>
        </div>
    </div>

    <hr />

    <h3>Months</h3>
    <div class="form-group">

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="January" value="true">
            <label class="form-check-label" for="January">January</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="February" value="true">
            <label class="form-check-label" for="February">February</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="March" value="true">
            <label class="form-check-label" for="March">March</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="April" value="true">
            <label class="form-check-label" for="April">April</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="May" value="true">
            <label class="form-check-label" for="May">May</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="June" value="true">
            <label class="form-check-label" for="June">June</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="July" value="true">
            <label class="form-check-label" for="July">July</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="August" value="true">
            <label class="form-check-label" for="August">August</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="September" value="true">
            <label class="form-check-label" for="September">September</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="October" value="true">
            <label class="form-check-label" for="October">October</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="November" value="true">
            <label class="form-check-label" for="November">November</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="December" value="true">
            <label class="form-check-label" for="December">December</label>
        </div>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
